{
  "compilerOptions": {
    "target": "ES2020",              // Modern JS compatible with Node 18+
    "module": "commonjs",            // Module system for Node.js
    "rootDir": "./src",              // Folder containing your TS code
    "outDir": "./dist",              // Folder where compiled JS will be generated
    "strict": true,                  // Enables strict type checking
    "esModuleInterop": true,         // Simplifies importing common libraries
    "forceConsistentCasingInFileNames": true,  // Prevents errors due to case sensitivity
    "skipLibCheck": true,            // Speeds up compilation by skipping library type checks
    "sourceMap": true                // Generates maps for debugging
  },
  "include": ["src"],                // Only compiles files within src
  "exclude": ["node_modules", "dist"] // Ignores node_modules and dist
}
