{
  "compilerOptions": {
    "target": "ES2020",              // JS moderno compatible con Node 18+
    "module": "commonjs",            // Sistema de módulos para Node.js
    "rootDir": "./src",              // Carpeta donde está tu código TS
    "outDir": "./dist",              // Carpeta donde se generará el JS compilado
    "strict": true,                  // Habilita chequeos estrictos de tipos
    "esModuleInterop": true,         // Facilita importar librerías comunes
    "forceConsistentCasingInFileNames": true,  // Evita errores por mayúsculas/minúsculas
    "skipLibCheck": true,            // Acelera compilación ignorando tipos de librerías
    "sourceMap": true                // Genera mapas para debug
  },
  "include": ["src"],                // Solo compila archivos dentro de src
  "exclude": ["node_modules", "dist"] // Ignora node_modules y dist
}
